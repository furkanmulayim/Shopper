                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/panel_et_back"
                    android:hint="@string/add_numara"
                    android:inputType="text"
                    android:paddingStart="20sp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20sp"
                    android:paddingBottom="10dp"
                    android:textColorHint="@color/dark_purple_50_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:hint="@string/add_renk"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/addRenk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/panel_et_back"
                    android:hint="@string/add_renk"
                    android:inputType="text"
                    android:paddingStart="20sp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20sp"
                    android:paddingBottom="10dp"
                    android:textColorHint="@color/dark_purple_50_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:hint="@string/add_renkSecenek"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/addRenkSecenek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/panel_et_back"
                    android:hint="@string/add_renkSecenek"
                    android:inputType="number"
                    android:paddingStart="20sp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20sp"
                    android:paddingBottom="10dp"
                    android:textColorHint="@color/dark_purple_50_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:hint="@string/add_satilanAdet"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/addSatilanAdet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/panel_et_back"
                    android:hint="@string/add_satilanAdet"
                    android:inputType="number"
                    android:paddingStart="20sp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20sp"
                    android:paddingBottom="10dp"
                    android:textColorHint="@color/dark_purple_50_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:hint="@string/add_ilgiliUrunId"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/addIlgiliUrunId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/panel_et_back"
                    android:hint="@string/add_ilgiliUrunId"
                    android:inputType="text"
                    android:paddingStart="20sp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20sp"
                    android:paddingBottom="10dp"
                    android:textColorHint="@color/dark_purple_50_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:hint="@string/add_hastags"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/addHastag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/panel_et_back"
                    android:hint="@string/add_hastags"
                    android:inputType="text"
                    android:paddingStart="20sp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20sp"
                    android:paddingBottom="10dp"
                    android:textColorHint="@color/dark_purple_50_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:hint="@string/add_isAktif"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/addIsAktif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/panel_et_back"
                    android:hint="@string/add_isAktif"
                    android:inputType="number"
                    android:paddingStart="20sp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20sp"
                    android:paddingBottom="10dp"
                    android:textColorHint="@color/dark_purple_50_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:hint="@string/add_isKargoUcret"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/addIsKargoUcret"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/panel_et_back"
                    android:hint="@string/add_isKargoUcret"
                    android:inputType="number"
                    android:paddingStart="20sp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20sp"
                    android:paddingBottom="10dp"
                    android:textColorHint="@color/dark_purple_50_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:hint="@string/add_isReelsActive"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/addIsReelsActive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/panel_et_back"
                    android:hint="@string/add_isReelsActive"
                    android:inputType="number"
                    android:paddingStart="20sp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20sp"
                    android:paddingBottom="10dp"
                    android:textColorHint="@color/dark_purple_50_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:hint="@string/add_isSiparisAlim"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/addIsSiparisAlim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/panel_et_back"
                    android:hint="@string/add_isSiparisAlim"
                    android:inputType="number"
                    android:paddingStart="20sp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20sp"
                    android:paddingBottom="10dp"
                    android:textColorHint="@color/dark_purple_50_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:hint="@string/add_isUreticiSecimi"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/addIsUreticiSecimi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/panel_et_back"
                    android:hint="@string/add_isUreticiSecimi"
                    android:inputType="number"
                    android:paddingStart="20sp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20sp"
                    android:paddingBottom="10dp"
                    android:textColorHint="@color/dark_purple_50_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:hint="@string/add_isYeni"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/addIsYeni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/panel_et_back"
                    android:hint="@string/add_isYeni"
